use v6;

use Template::Mojo;

my $tmpl = Template::Mojo.new(q:heredoc/END/);
% my ($name) = @_;
Hello, <%= $name %>
END

sub app($env) {
    my $content = $tmpl.render($env<QUERY_STRING> // 'unknown').encode('utf-8');
    return [200,
        [
                'Content-Type' => 'text/plain'
        ],
        [$content]
    ];
}

